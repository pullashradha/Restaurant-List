<head>
  <link rel="stylesheet" href="Content/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="Content/css/styles.css" type="text/css">
</head>
<body>
  <h1 class="page-header">Restaurant List</h1>
  <div class="list">
    <ul>
      @foreach(var restaurant in Model.GetRestaurants())
      {
        <a href="/@restaurant.GetId()/@restaurant.GetName()/details"><li>@restaurant.GetName()</li></a>
      }
    </ul>
    <form class="" action="/cuisine/deleted" method="post">
      <input type="hidden" name="cuisineId" value="@Model.GetId()">
      <button type="submit" class="btn btn-danger" formaction="/restaurant/list/deleted">Delete Restaurant List</button>
      <button type="submit" class="btn btn-warning">Delete this Cuisine</button>
    </form>
    <h2><a href="/cuisine/list">Back to Cuisine List</a></h2>
    <h2><a href="/">Back Home</a></h2>
  </div>
</body>
